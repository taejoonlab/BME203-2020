# The function to read sequences from a FASTA file
def read_fasta(filename):
    rv = dict()
    f = open(filename, 'r')
    for line in f:
        if line.startswith('>'):
            tmp_h = line.strip().lstrip('>')
            rv[tmp_h] = ''
        else:
            rv[tmp_h] += line.strip().replace(' ', '')
    f.close()
    return rv
    
    # Read genomes
filename_genomes = '../data/2019nCoV_genomes.2020_02_03.fa'
genome_list = read_fasta(filename_genomes)
for g_h, g_seq in genome_list.items():
    print(g_h.split()[0], g_seq[:25])
    
    #How many genomes are there?
print('The number of sequences in the nCoV genome is', len(genome_list))

#How long are they?
for g_seq in genome_list.values():
    print('This gene of the nCoV has ', len(g_seq), 'nucleotides respectively')
